import person3 from '../assets/testimonial/03.png'; 
import work1 from '../assets/work/05.webp'; 
import work2 from '../assets/work/06.webp'; 
import work3 from '../assets/work/03.webp'; 

// Array of testimonial data
const testimonials = [
  {
    name: 'Mridliprasad',
    title: 'idli founder',
    interiorimage: work1,
    personimage: person1,
    content: 'Lorem, ipsum dolor sit amet consectetur adipisicing elit. Repellat quibusdam a impedit, ipsam ipsum dolor sit amet consectetur adipisicing elit. Repellat quibusdam a impedit, ipsam'
  },
  {
    name: 'Mridliprasad',
