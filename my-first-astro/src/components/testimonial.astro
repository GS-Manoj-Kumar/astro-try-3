    personimage: person3,
    content: 'Lorem, ipsum dolor sit amet consectetur adipisicing elit. Repellat quibusdam a impedit, ipsam'
  }
];
---

<section class="min-h-svh w-full bg-red-100">
  <div class="flex flex-col gap-">
    <div class="head-text mt-7">
      <h1 class="text-center font-extrabold leading-snug">What Our Customers Say</h1>
      <h2 class="text-center head2-text">There are many variations of the passages</h2>
    </div>

    <div class="max-w-screen-xl mx-auto p-5 sm:p-5 md:p-10">
      <div class="grid grid-cols-1 lg:grid-cols-3 sm:grid-cols-2 gap-10 overflow-x-auto">
        {testimonials.map((testimonial, index) => (
          <Card
            key={index}
            name={testimonial.name}
            title={testimonial.title}
            interiorimage={testimonial.interiorimage}
            personimage={testimonial.personimage}
            Content={testimonial.content}
          />
        ))}
      </div>
    </div>
  </div>
</section>
