---


<section class="bg-zinc-00 h-hero w-full">
  <div class="hidden md:grid md:grid-cols-12 md:grid-rows-12 md:h-full md:w-full bg-slate-00">
    
    <div id="hero_img" class="row-span-12 col-span-9 row-start-1 col-start-1 rounded-r-[6rem] overflow-clip " >
      <img src={Defaultimg.src} alt="Hero Image" class="w-full h-full object-cover" id='myImg'  >

    </div>

    <div class="z-10 row-start-1 col-start-10 col-span-3 row-span-12 rounded-l-[6rem]  bg-red-200" id="">
      <div class=" flex w-full h-full z-10 rounded-l-[6rem]  bg-clip-padding backdrop-filter backdrop-blur-lg bg-opacity-70 border border-gray-300 drop-shadow-lg items-center justify-center">
        <FORM formId="hero-form" />


      </div>
      
    </div>
    
    <div class="col-span-6 row-span-2 col-start-1 row-start-11 bg-slate-00" id="buttons overflow-clip ">
      <div class="flex flex-row justify-stretch gap-6 p-1">

        <button id="button1" class="bg-red-300  bg-opacity-100 border-2 border-red-400 rounded-lg text-md text-black font-extrabold py-2 px-4 hover:bg-red-400  ">Concept</button>
        <button id="button2" class="bg-red-300  bg-opacity-100 border-2 border-red-400 rounded-lg text-md text-black font-extrabold py-2 px-4 hover:bg-red-400  ">Drawing</button>
        <button id="button3" class="bg-red-300  bg-opacity-100 border-2 border-red-400 rounded-lg text-md text-black font-extrabold py-2 px-4 hover:bg-red-400  ">Actual</button>
      </div>
    </div>

     <div class="col-span-8 row-span-5 col-start-1 row-start-1 bg-slate-00 p-4 z-10" id="typo_graph">
       
  
                    <div class="text-left prose max-sm:prose-sm md:prose-lg lg:prose-xl">
                      <h1 class="font-extrabold  text-gray-900 whitespace-pre uppercase">Let Your Home Be 
Unique</h1>
                      <h4 class="mt-2  text-gray-600 whitespace-pre font-bold ">WORK WITH BEST INTERIOR 
DESIGNERS IN BANGALORE</h4>
                    </div>
      </div>


  </div>

  <!-- mobile view -->
   <!-- mobile view -->
   <div class="hidden max-md:grid max-md:grid-cols-12 max-md:grid-rows-12 max-md:h-full max-md:w-full bg-slate-100">

    <div id="hero_img" class="row-span-12 col-span-12 row-start-1 col-start-1  overflow-clip  rounded-b-badge" >
      <img src={Defaultimg.src} alt="Hero Image" class="w-full h-full object-cover" id='myImgmobo'  >

    </div>
  
     <div class="col-span-12 row-span-1 col-start-1 row-start-12 bg-slate-00" id="   ">
      <div id="openModalBtnMobile" class=" px-4 py-2 bg-red-500 text-white mb-2 w-full h-full text-center rounded-full "><Modal1/>
   
      </div>
      
     </div>
  

    <div class="col-span-12 row-span-5 col-start-1 row-start-1 bg-slate-00 p-4" id="typo_graph">
       
  
                    <div class="text-left max-sm:prose-sm prose md:prose-lg lg:prose-xl">
                      <h1 class="font-extrabold  text-gray-900 whitespace-pre-wrap uppercase">Let Your Home Be 
Unique</h1>
                      <h4 class="  text-gray-600 whitespace-pre-wrap font-bold ">WORK WITH BEST INTERIOR 
DESIGNERS IN BANGALORE</h4>
                    </div>
         
                    
      </div>
    

    
  
  


    <div class="col-span-1 row-span-1 col-start-1  row-start-6 " id="buttons  ">
      <div class="flex justify-start gap-4 rotate-90">
      

         <button id="button4" class="bg-red-200  bg-opacity-60 border-2 border-red-400 rounded-t-lg text-md text-black font-extrabold py-2 px-2  hover:bg-red-300 hover:-translate-y-2 ">Concept</button>
      
         <button  id="button5" class="bg-red-200  bg-opacity-60 border-2 border-red-400 rounded-t-lg text-md text-black font-extrabold py-2 px-2 hover:bg-red-300  hover:-translate-y-2">Drawing</button>
      
         <button id="button6" class="bg-red-200  bg-opacity-60 border-2 border-red-400 rounded-t-lg text-md text-black font-extrabold py-2 px-2 hover:bg-red-300  hover:-translate-y-2">Render</button>
     
  
      </div>
    </div>

  </div>
  

</section>

