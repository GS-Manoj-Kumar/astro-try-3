<script>
     //@ts-nocheck
    import Conceptimg from '../assets/work/06.png';
    import Drawingimg from '../assets/work/05.png';
    import Renderimg from '../assets/work/03.png';
   
    // This script runs after the component is rendered
    const myImg = document.querySelector('#myImg');
    const button1 = document.querySelector('#button1');
    const button2 = document.querySelector('#button2');
    const button3 = document.querySelector('#button3');
  
    button1.addEventListener('mouseover', () => {
      myImg.src = Conceptimg.src ;
    });
    button2.addEventListener('mouseover', () => {
      myImg.src = Drawingimg.src ;
    });
    button3.addEventListener('mouseover', () => {
      myImg.src = Renderimg.src ;
    });




  </script>


